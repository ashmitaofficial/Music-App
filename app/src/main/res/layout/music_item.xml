<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/song_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/song_pic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/pic_style" />

            <TextView
                android:id="@+id/song_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Nazm Nazm Nazm Nazm Nazm Nazm Nazm NazmNazm NazmNazm Nazm"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/song_pic"
                app:layout_constraintEnd_toStartOf="@id/song_duration"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                app:layout_constrainedWidth="true"
                android:layout_marginTop="10dp"
                android:ellipsize="marquee"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/movie_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="movie name"
                app:layout_constraintTop_toBottomOf="@id/song_name"
                app:layout_constraintStart_toEndOf="@id/song_pic"
                android:layout_marginStart="12dp"
                android:maxLines="1"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/song_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:15"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="end"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>





        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>


</RelativeLayout>